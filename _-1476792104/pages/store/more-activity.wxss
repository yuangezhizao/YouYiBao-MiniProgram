.match-status-bar {
    position: relative;
    z-index: 99;
}

.match-status-bar .statusBar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 64rpx;
}

.match-status-bar .statusBar .icon-group {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    width: 174rpx;
    height: 64rpx;
    background-color: rgba(0,0,0,.2);
    border-radius: 35rpx;
    margin-left: 30rpx;
    border: 1rpx solid hsla(0,0%,98%,.3);
    z-index: 9999;
}

.match-status-bar .statusBar .icon-group .line {
    width: 3rpx;
    height: 32rpx;
    background: hsla(0,0%,98%,.3);
}

.match-status-bar .statusBar .icon-group .left {
    width: 38rpx;
    height: 38rpx;
    padding: 10rpx 20rpx;
}

.activity-list {
    margin-top: 100rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.activity-list .activity-banner {
    width: 100%;
    height: 350rpx;
    position: relative;
    border-radius: 16rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.activity-list .activity-banner .activity-banner-title {
    width: 100%;
    position: absolute;
    bottom: 0;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: linear-gradient(0deg,rgba(34,34,34,.35),rgba(232,241,254,0));
}