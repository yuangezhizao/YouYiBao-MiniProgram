.navbar {
    flex: none;
    display: flex;
    width: 100%;
    margin: auto;
    background: #fff;
    padding-top: 100rpx;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #999999;
}

.navbar .item.active {
    color: #2660E7;
}

.navbar .item.active:after {
    content: "";
    display: block;
    height: 4rpx;
    width: 15%;
    margin: 10rpx auto;
    background: #2660E7;
}

