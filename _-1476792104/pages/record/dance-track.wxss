.music-list {
    padding: 30rpx;
}

.music-list .music-item {
    display: flex;
    flex-direction: column;
    min-height: 220rpx;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 8rpx 16rpx 0 rgba(17,85,233,0.1);
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.music-list .music-item.lock .avatar {
    position: relative;
}

.music-list .music-item.lock .avatar:after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    display: block;
    left: 0;
    top: 0;
    background: url("http://yyb-oss.universal-space.cn/imgs/record/icon_record_lock.png") no-repeat center rgba(0,0,0,0.5);
    background-size: 80rpx 80rpx;
    z-index: 2;
}

.music-list .music-item .music-item-top {
    display: flex;
    margin: 40rpx 0 24rpx 15rpx;
}

.music-list .music-item .music-item-top .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 12rpx;
    border: 5rpx solid #fff;
    overflow: hidden;
    margin-right: 20rpx;
}

.music-list .music-item .music-item-top .avatar image {
    width: 100%;
    height: 100%;
}

.music-list .music-item .music-item-top .info .col {
    display: flex;
    font-size: 24rpx;
    color: #666;
    align-items: center;
    line-height: 40rpx;
}

.music-list .music-item .music-item-top .info .col image {
    margin-right: 5rpx;
    width: 35rpx;
    height: 35rpx;
}

.music-list .music-item .music-item-top .info .col text {
    opacity: .8;
    width: 345rpx;
}

.music-list .music-item .music-item-top .num {
    width: 70rpx;
    max-width: 70rpx;
    text-align: center;
    margin-right: 10rpx;
    line-height: 150rpx;
}

.music-list .music-item:nth-child(1) .num {
    color: #DBBB81;
}

.music-list .music-item:nth-child(2) .num {
    color: #999;
}

.music-list .music-item:nth-child(3) .num {
    color: #D5A187;
}

.music-list .music-item:nth-child(-n+9) .num {
    font-size: 80rpx;
}

.music-list .music-item:nth-child(-n+99):nth-child(n+10) .num {
    font-size: 60rpx;
}

.music-list .music-item:nth-child(-n+999):nth-child(n+100) .num {
    font-size: 40rpx;
}

.music-list .music-item .music-item-bottom {
    width: 100%;
    height: 100rpx;
    border-radius: 20rpx;
    background: linear-gradient(45deg,#3CA6FD,#2F5FFF);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
}