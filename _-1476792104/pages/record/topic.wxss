.topic-list {
    padding: 100rpx 30rpx 30rpx;
}

.topic-list .topic-item {
    display: flex;
    flex-direction: column;
    min-height: 220rpx;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 8rpx 16rpx 0 rgba(17,85,233,0.1);
    box-sizing: border-box;
    margin-bottom: 20rpx;
    overflow: hidden;
}

.topic-list .topic-item.lock .img {
    position: relative;
}

.topic-list .topic-item.lock .img:after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    display: block;
    left: 0;
    top: 0;
    background: url("http://yyb-oss.universal-space.cn/imgs/record/icon_record_lock.png") no-repeat center rgba(0,0,0,0.5);
    background-size: 80rpx 80rpx;
    z-index: 2;
}

.topic-list .topic-item .top .tag {
    height: 53rpx;
    line-height: 53rpx;
    background: url("http://yyb-oss.universal-space.cn/imgs/record/lebel_ blue.png") right no-repeat;
    background-size: auto 100%;
    font-size: 26rpx;
    display: inline-flex;
    align-items: center;
    color: #fff;
    padding-right: 48rpx;
    padding-left: 10rpx;
}

.topic-list .topic-item .top .tag text {
    font-size: 40rpx;
    padding: 0 10rpx;
    font-style: oblique;
}

.topic-list .topic-item .cont {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 28rpx;
}

.topic-list .topic-item .cont .img {
    width: 268rpx;
    height: 150rpx;
    border-radius: 20rpx;
    margin-right: 30rpx;
    overflow: hidden;
}

.topic-list .topic-item .cont .img image {
    width: 100%;
    height: 100%;
}

.topic-list .topic-item .cont .info {
    width: 310rpx;
}

.topic-list .topic-item .cont .info .name {
    color: #333;
    font-size: 30rpx;
    line-height: 2;
}

.topic-list .topic-item .cont .info .col {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #000;
}

.topic-list .topic-item .cont .info .col text {
    color: #999;
    margin-right: 10rpx;
}

.topic-list .topic-item .cont .info .col image {
    width: 24rpx;
    height: 24rpx;
}

.topic-list .topic-item .cont .arrow {
    transform: translateY(-30rpx);
}

.topic-list .topic-item .cont .arrow image {
    width: 22rpx;
    height: 22rpx;
}