.match-banner {
    width: 100%;
    height: 500rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 16rpx 16rpx 0 rgba(85,145,252,0.08);
    padding-top: 100rpx;
    padding-bottom: 40rpx;
}

.match-banner image {
    width: 100%;
    height: 100%;
}

.match-title {
    width: 100%;
    height: 120rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 16rpx 16rpx 0 rgba(85,145,252,0.08);
    margin: 25rpx 0 20rpx 0;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.match-title .title-right {
    display: flex;
    align-items: center;
}

.match-title .title-right image {
    width: 20rpx;
    height: 25rpx;
    margin-right: 10rpx;
}

.my-match {
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.my-match .desc {
    color: #2F5FFF;
}

.my-match .title {
    margin: 10rpx 0;
    padding: 0 10rpx;
}

.my-match .btn-group {
    display: flex;
    justify-content: space-between;
    margin: 70rpx 0;
}

.my-match .btn-group .btn {
    width: 334rpx;
    height: 110rpx;
    background: linear-gradient(to right,#3CA6FD,#2F5FFF);
    border-radius: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 8rpx 16rpx 0 rgba(53,131,254,0.22);
}

.my-match .btn-group .btn:last-child {
    background: linear-gradient(to right,#5BE89B,#2ECCBD);
    box-shadow: 0 8rpx 16rpx 0 rgba(18,179,159,0.2);
}

.best-record {
    min-height: 210rpx;
    border-radius: 20rpx;
    background: linear-gradient(to right,#DA9AFB,#987EFB);
    box-shadow: 0 8rpx 12rpx 0 rgba(179,137,251,0.46);
    display: flex;
    align-items: center;
}

.best-record .record-item-1 {
    display: flex;
    flex-direction: column;
    margin: 0 60rpx;
}

.best-record .record-item-1 .avatar {
    border-radius: 50%;
    overflow: hidden;
    border: 4rpx solid #fff;
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 10rpx;
    box-shadow: 0 8rpx 12rpx 0 rgba(179,137,251,0.46);
}

.best-record .record-item-1 .avatar image {
    border-radius: 50%;
    width: 100%;
    height: 100%;
}

.best-record .left {
    width: 100%;
}

.best-record .left .col {
    display: flex;
    align-items: center;
    flex-direction: row;
    height: 150rpx;
}

.best-record .left .col .record-item-2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    white-space: nowrap;
}

.best-record .left .col .record-item-2 .font-style {
    text-shadow: 1rpx 3rpx 10rpx rgba(0,0,0,0.3);
    height: 90rpx;
    line-height: 90rpx;
    white-space: nowrap;
}

.best-record .left .col .line {
    width: 4rpx;
    height: 30rpx;
    border-radius: 2rpx;
    background-color: rgba(255,255,255,0.7);
    margin: 0 50rpx;
}