.confirm-box {
    width: 540rpx;
    height: 469rpx;
    background: #fff;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.confirm-box .close {
    width: 42rpx;
    height: 70rpx;
    position: absolute;
    right: 10rpx;
    top: -70rpx;
}

.confirm-box .top {
    width: 100%;
    height: 136rpx;
    position: absolute;
    top: 0;
    text-align: center;
    line-height: 136rpx;
}

.confirm-box .content {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 130rpx 0 40rpx 0;
    text-align: center;
}

.confirm-box .btn_group_cus {
    width: 290rpx;
    height: 96rpx;
    border-radius: 55rpx;
    text-align: center;
    line-height: 96rpx;
    box-shadow: 0 8rpx 16rpx 0 rgba(53,131,254,0.22);
}

.confirm-box .button_group {
    display: flex;
    justify-content: center;
    width: 100%;
}

.confirm-box .button_group .button {
    width: 210rpx;
    height: 90rpx;
    border-radius: 55rpx;
    background: linear-gradient(45deg,#9A9A9A,#575757);
    text-align: center;
    line-height: 90rpx;
    box-shadow: 0 8rpx 16rpx 0 rgba(161,161,161,0.22);
    margin: 0 15rpx;
}

.confirm-box .button_group .button:last-child {
    background: linear-gradient(45deg,#3CA6FD,#2F5FFF);
    box-shadow: 0 8rpx 16rpx 0 rgba(53,131,254,0.22);
}

.bg-183 {
    z-index: 9;
}

.statusBar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 64rpx;
    z-index: 99;
}

.icon-group {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    width: 174rpx;
    height: 64rpx;
    background-color: rgba(0,0,0,0.2);
    border-radius: 35rpx;
    margin-left: 30rpx;
    border: 1rpx solid rgba(250,250,250,0.3);
    z-index: 9999!important;
}

.icon-group .line {
    width: 3rpx;
    height: 32rpx;
    background: rgba(250,250,250,0.3);
}

.icon-group .icon {
    width: 38rpx;
    height: 38rpx;
    padding: 10rpx 20rpx;
}

page {
    background: #F2F9FF;
}

.user-info {
    display: flex;
    align-items: center;
    width: 100%;
    height: 140rpx;
    border-radius: 20rpx;
    background: #fff;
    box-shadow: 0 6rpx 10rpx 4rpx #e9f1ff;
    margin-top: 100rpx;
}

.user-info image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    box-shadow: 0 2rpx 3rpx 0 rgba(53,131,254,0.2);
    margin: 0 20rpx 0 20rpx;
    border: 6rpx solid #fff;
}

.user-info .user-name {
    width: 300rpx;
}

.user-info .f40 {
    margin-left: 15rpx;
}

.recharge-explain {
    display: flex;
    flex-direction: column;
    margin: 30rpx;
    line-height: 40rpx;
}

.recharge {
    margin-left: 30rpx;
}

.recharge .count {
    display: flex;
    margin: 18rpx 0;
}

.recharge .count .down {
    width: 78rpx;
    height: 78rpx;
    border-radius: 10rpx;
    background: #3376FE;
    text-align: center;
    line-height: 78rpx;
}

.recharge .count input {
    width: 160rpx;
    height: 78rpx;
    border-radius: 10rpx;
    border: 1rpx solid #3376FE;
    margin: 0 20rpx;
    text-align: center;
    color: #3376FE;
}

.recharge .count .active {
    background: #BBBBBB;
}

.agree {
    margin: 30rpx;
    display: flex;
    align-items: center;
}

.agree .checkbox {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    border: 1rpx solid #999;
    margin-right: 5rpx;
    position: relative;
    transition: all 500ms;
}

.agree .checkbox.checked {
    background-color: #2660E7;
    border-color: #2660E7;
}

.agree .checkbox.checked:after {
    content: '';
    width: 15rpx;
    height: 6rpx;
    border: 1rpx solid #fff;
    border-top: 0;
    border-right: 0;
    position: absolute;
    display: block;
    left: 6rpx;
    top: 10rpx;
    transform: rotate(-45deg) scale(1);
}

.btn {
    width: 570rpx;
    height: 110rpx;
    border-radius: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 87rpx auto;
    box-shadow: 0 8rpx 16rpx 0 rgba(53,131,254,0.22);
}