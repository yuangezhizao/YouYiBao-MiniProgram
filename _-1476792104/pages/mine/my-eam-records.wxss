.navbar {
    flex: none;
    display: flex;
    width: 100%;
    margin: auto;
    background: #fff;
    padding-top: 110rpx;
    justify-content: space-around;
    padding-bottom: 30rpx;
}

.navbar .item {
    position: relative;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #999999;
}

.navbar .item.active {
    color: #2660E7;
}

.navbar .item.active:after {
    content: "";
    display: block;
    height: 4rpx;
    width: 30rpx;
    margin: 10rpx auto;
    background: #2660E7;
}

.ce-wrap {
    border-radius: 30rpx 30rpx 0 0;
    padding: 50rpx 30rpx 30rpx;
    background: linear-gradient(to bottom,#E3ECFF,#F2F9FF);
    margin-top: -20rpx;
}

.record-item {
    padding: 30rpx;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 6rpx 10rpx 0 #e9f1ff;
    margin-bottom: 20rpx;
    line-height: 45rpx;
}

.record-item .name {
    padding-top: 10rpx;
    padding-bottom: 10rpx;
}

.record-item .detail {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.record-item .detail .left {
    width: 500rpx;
}

.record-item .detail .btn {
    width: 180rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 30rpx;
}