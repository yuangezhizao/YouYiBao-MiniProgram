.form {
    padding: 98rpx;
}

.form .field {
    border-bottom: 1rpx solid #d8d8d8;
    position: relative;
    height: 117rpx;
    display: flex;
    align-items: flex-end;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}

.form .field .input {
    color: #bbb;
    font-size: 30rpx;
}

.form .field .arrow {
    display: flex;
    transform: translate(-30rpx,-10rpx);
}

.form .field .arrow,.form .field .arrow image {
    width: 22rpx;
    height: 22rpx;
}

.form .field .btn {
    width: 200rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 30rpx;
}

.form .field button[disabled][type="default"],.form .field button[disabled]:not([type]) {
    border: 1rpx solid #bfbfbf;
    background: none;
    color: #bfbfbf;
}

.submit {
    width: 480rpx;
    height: 108rpx;
    line-height: 108rpx;
    border: 0;
    margin: 80rpx auto auto;
    display: block;
}

button[disabled][type="default"],button[disabled]:not([type]) {
    background: linear-gradient(90deg,#9a9a9a,#575757);
    color: #fff;
}