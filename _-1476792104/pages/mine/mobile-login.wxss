.bg-183 {
    z-index: 9;
}

.statusBar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 64rpx;
    z-index: 99;
}

.icon-group {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    width: 174rpx;
    height: 64rpx;
    background-color: rgba(0,0,0,0.2);
    border-radius: 35rpx;
    margin-left: 30rpx;
    border: 1rpx solid rgba(250,250,250,0.3);
    z-index: 9999!important;
}

.icon-group .line {
    width: 3rpx;
    height: 32rpx;
    background: rgba(250,250,250,0.3);
}

.icon-group .icon {
    width: 38rpx;
    height: 38rpx;
    padding: 10rpx 20rpx;
}

.login {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.login .logo {
    width: 200rpx;
    height: 200rpx;
    margin-top: 168rpx;
    margin-bottom: 0rpx;
    background: #ccc;
    border-radius: 50%;
}

.login .phoneNumber,.login .password,.login .captcha {
    display: flex;
    justify-content: center;
    align-items: baseline;
    width: 558rpx;
    border-bottom: 1rpx solid #d8d8d8;
    margin-top: 70rpx;
}

.login .phoneNumber .icon,.login .password .icon,.login .captcha .icon {
    min-width: 30rpx;
    width: 30rpx;
    height: 31rpx;
}

.login .phoneNumber input,.login .password input,.login .captcha input {
    padding-left: 30rpx;
    margin-bottom: 10rpx;
    width: 100%;
}

.login .phoneNumber .button,.login .password .button,.login .captcha .button {
    width: 250rpx;
    height: 72rpx;
    text-align: center;
    line-height: 72rpx;
    border-radius: 55rpx;
    margin-top: -30rpx;
}

.login .phoneNumber .button::after,.login .password .button::after,.login .captcha .button::after {
    border: 0;
}

.login .phoneNumber .active,.login .password .active,.login .captcha .active {
    color: #3577FE;
    border: 1rpx solid #3577FE;
}

.login .phoneNumber button[disabled][type="default"],.login .password button[disabled][type="default"],.login .captcha button[disabled][type="default"],.login .phoneNumber button[disabled]:not([type]),.login .password button[disabled]:not([type]),.login .captcha button[disabled]:not([type]) {
    border: 1rpx solid #BFBFBF;
    background: none;
    color: #BFBFBF;
}

.login .txt {
    margin-left: -190rpx;
    margin-top: 15rpx;
}

.login .txt_group {
    display: flex;
    margin-top: 54rpx;
}

.login .txt_group .forget_password {
    padding: 0 20rpx;
    border-right: 1rpx solid #BDBDBD;
}

.login .txt_group .login_type {
    padding: 0 20rpx;
}

.login .btn {
    width: 480rpx;
    height: 110rpx;
    line-height: 110rpx;
    border-radius: 120rpx;
    margin: 50rpx 0 44rpx 0;
    border: none;
    box-shadow: 0 8rpx 20rpx 0 rgba(53,131,254,0.22);
}

.login .btn::after {
    border: 0;
}

.login button[disabled][type="default"],.login button[disabled]:not([type]) {
    background: linear-gradient(to right,#9A9A9A,#575757);
    color: #fff;
}

.login .go_back {
    display: flex;
    align-items: center;
}

.login .go_back .icon {
    width: 28rpx;
    height: 28rpx;
    margin: 0 5rpx;
}