.bg-183 {
    z-index: 9;
}

.statusBar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 64rpx;
    z-index: 99;
}

.icon-group {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    width: 174rpx;
    height: 64rpx;
    background-color: rgba(0,0,0,0.2);
    border-radius: 35rpx;
    margin-left: 30rpx;
    border: 1rpx solid rgba(250,250,250,0.3);
    z-index: 9999!important;
}

.icon-group .line {
    width: 3rpx;
    height: 32rpx;
    background: rgba(250,250,250,0.3);
}

.icon-group .icon {
    width: 38rpx;
    height: 38rpx;
    padding: 10rpx 20rpx;
}

.changePassword {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 70rpx;
}

.changePassword .phoneNumber,.changePassword .captcha,.changePassword .newPassword {
    display: flex;
    justify-content: baseline;
    width: 662rpx;
    border-bottom: 1rpx solid #BDBDBD;
    margin-top: 70rpx;
    position: relative;
}

.changePassword .phoneNumber input,.changePassword .captcha input,.changePassword .newPassword input {
    padding-left: 30rpx;
    margin-bottom: 10rpx;
}

.changePassword .phoneNumber .button,.changePassword .captcha .button,.changePassword .newPassword .button {
    width: 200rpx;
    height: 72rpx;
    text-align: center;
    line-height: 72rpx;
    border-radius: 55rpx;
    color: #3577FE;
    border: 1rpx solid #3577FE;
    position: absolute;
    right: 0;
    bottom: 8rpx;
}

.changePassword .phoneNumber .button::after,.changePassword .captcha .button::after,.changePassword .newPassword .button::after {
    border: 0;
}

.changePassword .phoneNumber button[disabled][type="default"],.changePassword .captcha button[disabled][type="default"],.changePassword .newPassword button[disabled][type="default"],.changePassword .phoneNumber button[disabled]:not([type]),.changePassword .captcha button[disabled]:not([type]),.changePassword .newPassword button[disabled]:not([type]) {
    border: 1rpx solid #BFBFBF;
    background: none;
    color: #BFBFBF;
}

.changePassword .confirmBtn {
    width: 480rpx;
    height: 110rpx;
    background: linear-gradient(45deg,#3CA6FD,#2F5FFF);
    line-height: 110rpx;
    letter-spacing: 8rpx;
    text-align: center;
    margin-top: 90rpx;
    border-radius: 60rpx;
}

.changePassword button[disabled][type="default"],.changePassword button[disabled]:not([type]) {
    background: linear-gradient(to right,#9A9A9A,#575757);
    color: #fff;
}