.gift-list {
    margin-top: 90rpx;
    padding: 30rpx;
}

.gift-list .gift-item {
    margin-bottom: 27rpx;
}

.gift-list .gift-item .title {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 20rpx;
}

.gift-list .gift-item .title text {
    color: #999;
    font-size: 30rpx;
    line-height: 1;
}

.gift-list .gift-item .title .btn {
    min-width: 200rpx;
}

.gift-list .gift-item .title .disabled {
    background: #BBBBBB;
}

.gift-list .gift-item .gift-card {
    padding: 30rpx;
    height: 150rpx;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 8rpx 20rpx 0 rgba(85,145,252,0.2);
    display: flex;
    align-items: center;
}

.gift-list .gift-item .gift-card .img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 20rpx;
    margin: 0 30rpx 0 10rpx;
}

.gift-list .gift-item .gift-card .img image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.gift-list .gift-item .gift-card .text {
    max-width: 390rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #2660E7;
    font-weight: 300;
}

.gift-list .gift-item .gift-card .text label {
    color: #999;
}

.confirm-box {
    width: 650rpx;
    height: 640rpx;
    background: #fff;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.confirm-box .close {
    width: 42rpx;
    height: 70rpx;
    position: absolute;
    right: 0;
    top: -70rpx;
}

.confirm-box .top {
    width: 100%;
    height: 136rpx;
    position: absolute;
    top: 0;
    text-align: center;
    line-height: 136rpx;
}

.confirm-box .input-content {
    margin: 170rpx 0 60rpx;
}

.confirm-box .input-content input {
    width: 580rpx;
    height: 100rpx;
    background: #F2F9FF;
    border-radius: 11rpx;
    margin: 43rpx 0 10rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.confirm-box .btn {
    width: 342rpx;
    height: 96rpx;
    background: linear-gradient(to right,#3CA6FD,#2F5FFF);
    border-radius: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 8rpx 16rpx 0 rgba(53,131,254,0.22);
}