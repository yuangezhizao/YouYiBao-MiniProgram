.match-status-bar {
    position: relative;
    z-index: 99;
}

.match-status-bar .statusBar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 64rpx;
}

.match-status-bar .statusBar .icon-group {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    width: 174rpx;
    height: 64rpx;
    background-color: rgba(0,0,0,.2);
    border-radius: 35rpx;
    margin-left: 30rpx;
    border: 1rpx solid hsla(0,0%,98%,.3);
    z-index: 9999;
}

.match-status-bar .statusBar .icon-group .line {
    width: 3rpx;
    height: 32rpx;
    background: hsla(0,0%,98%,.3);
}

.match-status-bar .statusBar .icon-group .left {
    width: 38rpx;
    height: 38rpx;
    padding: 10rpx 20rpx;
}

.btn {
    position: relative;
    display: inline-block;
    height: 88rpx;
    padding: 0;
    font-size: 32rpx;
    line-height: 84rpx;
    text-align: center;
    vertical-align: middle;
    box-sizing: border-box;
    border-radius: 10rpx;
    -webkit-appearance: none;
    -webkit-text-size-adjust: 100%;
    transition: all .5s;
}

.btn::before {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background-color: #000;
    border: inherit;
    border-color: #000;
    border-radius: inherit;
    content: " ";
    opacity: 0;
    transform: translate(-50%,-50%);
}

.btn::after {
    border-width: 0;
}

.btn:active {
    transform: translateY(.1em);
}

.btn-active::before {
    opacity: .15;
}

.btn-unclickable::after {
    display: none;
}

.btn-default {
    color: #bbb;
    background-color: #fff;
    border: 1rpx solid #fff;
}

.btn-primary {
    color: #fff;
    background-color: #2660e7;
    border: 1rpx solid #2660e7;
}

.btn-danger {
    color: #fff;
    background-color: #e13434;
    border: 1rpx solid #e13434;
}

.btn-warning {
    color: #fff;
    background-color: #f6c96a;
    border: 1rpx solid #f6c96a;
}

.btn-success {
    color: #fff;
    background-color: #5be89b;
    border: 1rpx solid #5be89b;
}

.btn-plain {
    background-color: #fff;
}

.btn-plain.btn-primary {
    color: #2660e7;
}

.btn-plain.btn-black {
    border: 1rpx solid #999;
}

.btn-plain.btn-danger {
    color: #e13434;
}

.btn-plain.btn-warning {
    color: #f6c96a;
}

.btn-large {
    width: 100%;
    height: 100rpx;
    line-height: 96rpx;
}

.btn-normal {
    padding: 0 30rpx;
    font-size: 28rpx;
}

.btn-small {
    height: 66rpx;
    min-width: 120rpx;
    padding: 0 20rpx;
    font-size: 26rpx;
    line-height: 66rpx;
}

.btn-mini {
    display: inline-block;
    width: 100rpx;
    height: 44rpx;
    font-size: 20rpx;
    line-height: 40rpx;
}

.btn-mini+.btn-mini {
    margin-left: 10rpx;
}

.btn-block {
    display: block;
    width: 100%;
}

.btn-round {
    border-radius: 2em;
}

.btn-square {
    border-radius: 0;
}

.btn-disabled {
    color: #fff;
    background-color: #bbb;
}

.activity-detail {
    padding: 35rpx;
    background: linear-gradient(180deg,#ff0038,#ff931f);
}

.activity-detail .activity-detail-title {
    margin-top: 75rpx;
    width: 471rpx;
    height: 185rpx;
    margin-bottom: 40rpx;
}

.activity-detail .activity-detail-title image {
    width: 100%;
    height: 100%;
}

.activity-detail .prize {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    padding-bottom: 30rpx;
    margin-bottom: 60rpx;
}

.activity-detail .prize .prize-top {
    background-image: url("http://yyb-oss.universal-space.cn/imgs/jackpot/jackpot_bg_top.png");
    background-size: 100% 100%;
    width: 100%;
    height: 500rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.activity-detail .prize .prize-top .prize-title {
    text-shadow: 4rpx 3rpx 0rpx #e59001;
    letter-spacing: 8rpx;
    margin-top: 4rpx;
}

.activity-detail .prize .prize-top .prize-img {
    width: 240rpx;
    height: 240rpx;
    margin: 40rpx 0 10rpx;
}

.activity-detail .prize .prize-top .prize-img image {
    max-width: 100%;
    max-height: 100%;
    display: block;
    margin: auto;
    border-radius: 50%;
}

.activity-detail .prize .prize-top .prize-name {
    display: flex;
    align-items: baseline;
}

.activity-detail .prize .prize-top .prize-name image {
    width: 36rpx;
    height: 25rpx;
}

.activity-detail .prize .prize-top .prize-name .name {
    margin: 0 16rpx;
}

.activity-detail .prize .prize-top .winner {
    margin-top: 32rpx;
}

.activity-detail .prize .prize-user-list {
    display: flex;
    flex-direction: column;
    background-image: url("http://yyb-oss.universal-space.cn/imgs/jackpot/jackpot_bg_middle.png");
    background-size: 100% 100%;
    width: 100%;
}

.activity-detail .prize .prize-user-list .user-list {
    display: flex;
    justify-content: center;
    width: 100%;
    box-sizing: border-box;
    padding: 0 50rpx;
    flex-wrap: wrap;
}

.activity-detail .prize .prize-user-list .user-list .avatar {
    width: 86rpx;
    height: 86rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 10rpx 15rpx;
    background: #ccc;
}

.activity-detail .prize .prize-user-list .user-list .avatar image {
    width: 100%;
    height: 100%;
}

.activity-detail .prize .prize-bottom {
    background-image: url("http://yyb-oss.universal-space.cn/imgs/jackpot/jackpot_bg_bottom.png");
    background-size: 100% 100%;
    width: 100%;
    height: 56rpx;
}