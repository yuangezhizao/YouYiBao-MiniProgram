.activities-info {
    background-color: #fff;
    padding-top: 90rpx;
    padding-bottom: 60rpx;
}

.activities-info .base {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx;
    margin-bottom: 34rpx;
}

.activities-info .base .mid {
    display: flex;
    flex-direction: column;
}

.activities-info .base .avatar {
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
    border-radius: 50%;
    border: 4rpx solid #3067e8;
}

.activities-info .base .avatar image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.activities-info .base .nickname {
    color: #333;
    font-size: 34rpx;
    font-weight: bold;
}

.activities-info .base .desc {
    color: #999;
    font-size: 24rpx;
}

.activities-info .base .desc text {
    color: #3067e8;
}

.activities-info .base .gift-count-btn {
    width: 200rpx;
    height: 110rpx;
    border-radius: 54rpx;
    background: linear-gradient(to right,#3ca6fd,#2f5fff);
    box-shadow: 0 4rpx 10rpx 0 rgba(53,131,254,0.22);
    display: flex;
    justify-content: center;
    color: #fff;
    font-size: 26rpx;
    align-items: center;
    flex-direction: row;
    position: relative;
}

.activities-info .base .gift-count-btn .icon {
    width: 60rpx;
    height: 60rpx;
}

.activities-info .base .gift-count-btn .icon image {
    width: 100%;
    height: 100%;
}

.activities-info .base .gift-count-btn .num {
    position: absolute;
    min-width: 43rpx;
    height: 43rpx;
    border-radius: 50%;
    border: 3rpx solid #fff;
    font-size: 22rpx;
    text-align: center;
    line-height: 43rpx;
    top: 0;
    right: 0;
    background: linear-gradient(135deg,#f99,#dc1b1b);
}

.activities-info .match-tabs {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-left: 100rpx;
    margin-right: 110rpx;
    box-sizing: border-box;
    width: auto;
    line-height: 74rpx;
}

.activities-info .match-tabs .tab {
    color: #999;
    font-size: 28rpx;
    text-align: center;
    position: relative;
    transition: all 500ms;
}

.activities-info .match-tabs .tab:after {
    content: '';
    display: block;
    width: 30rpx;
    height: 4rpx;
    border-radius: 2rpx;
    background-color: #2660e7;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%,-0.2em);
    transition: all 500ms;
    opacity: 0;
}

.activities-info .match-tabs .tab.active {
    color: #2660e7;
}

.activities-info .match-tabs .tab.active:after {
    opacity: 1;
    transform: translateX(-50%);
}

.activities-list {
    background: linear-gradient(to top,rgba(255,255,255,0.1),#e3ecff);
    padding: 32rpx 0;
    border-radius: 32rpx 32rpx 0 0;
    margin-top: -30rpx;
}