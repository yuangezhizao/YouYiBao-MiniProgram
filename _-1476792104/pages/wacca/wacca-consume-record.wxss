.bg-183 {
    z-index: 9;
}

.statusBar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    height: 64rpx;
    z-index: 99;
}

.icon-group {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    width: 174rpx;
    height: 64rpx;
    background-color: rgba(0,0,0,0.2);
    border-radius: 35rpx;
    margin-left: 30rpx;
    border: 1rpx solid rgba(250,250,250,0.3);
    z-index: 9999!important;
}

.icon-group .line {
    width: 3rpx;
    height: 32rpx;
    background: rgba(250,250,250,0.3);
}

.icon-group .icon {
    width: 38rpx;
    height: 38rpx;
    padding: 10rpx 20rpx;
}

page {
    background: #F2F9FF;
}

.navbar {
    flex: none;
    display: flex;
    width: 100%;
    margin: auto;
    background: #fff;
    padding: 80rpx 0 40rpx;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #999999;
}

.navbar .active {
    color: #2660E7;
    font-weight: bold;
}

.navbar .active:after {
    content: "";
    display: block;
    height: 4rpx;
    width: 30rpx;
    margin: 10rpx auto;
    border-radius: 2rpx;
    background: #2660E7;
}

.record-container {
    margin-top: -30rpx;
    min-height: 500rpx;
    border-top-left-radius: 35rpx;
    border-top-right-radius: 35rpx;
    background-image: linear-gradient(to top,rgba(255,255,255,0.1),#e3ecff);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40rpx;
}

.record-container .record-item {
    width: 690rpx;
    min-height: 160rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0rpx 6rpx 10rpx 0rpx #e9f1ff;
    display: flex;
    flex-direction: column;
    padding: 25rpx;
    box-sizing: border-box;
    line-height: 45rpx;
    margin-bottom: 30rpx;
}

.record-container .record-item .record-row {
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
    border-bottom: 1rpx solid rgba(216,216,216,0.7);
    padding-bottom: 10rpx;
}

.record-container .record-item .record-bottom {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.record-container .record-item .record-bottom .record-bottom-item {
    display: flex;
    align-items: center;
    max-width: 50%;
}

.record-container .record-item .record-bottom .record-bottom-item image {
    min-width: 30rpx;
    min-height: 30rpx;
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}